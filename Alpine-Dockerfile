# syntax=docker/dockerfile:1
# Some advice from https://stackoverflow.com/questions/35931579/how-can-i-install-lxml-in-docker
 FROM alpine:3.12
# Install required packages
 RUN apk update && apk -U add --no-cache \
     git \
     nano \
     python3 \
     py3-pip \
     wget \
     curl \
     unzip \
     ffmpeg \
     bash \
  && apk add --no-cache --virtual .build-deps gcc libc-dev libxslt-dev \
  && apk add --no-cache libxslt \
  && pip3 install --no-cache-dir lxml>=3.5.0 \
  && apk del .build-deps \
  && pip3 install \
     youtube-dl \
     prettytable \
     bs4 \
     requests \
  && mkdir /phdl \
  && mkdir /downloads \
  && mkdir /db \
  && git clone https://github.com/dgthomson/phdl /phdl \
  && chmod +x /phdl/phdl.py \
  && touch /etc/youtube-dl.conf
WORKDIR /phdl
CMD /bin/bash
