# syntax=docker/dockerfile:1
# Some advice from https://stackoverflow.com/questions/35931579/how-can-i-install-lxml-in-docker
 FROM alpine:3.12
# Install required packages
 RUN apk update && apk -U add --no-cache \
     git \
     nano \
     python3 \
     py3-pip \
     wget \
     curl \
     unzip \
     ffmpeg \
     bash \
  && apk add --update --no-cache g++ gcc libxml2-dev libxslt-dev python-dev libffi-dev openssl-dev make \
  && pip3 install -r requirements.txt \
  && pip3 install \
     youtube-dl \
     prettytable \
     bs4 \
     requests \
  && mkdir /phdl \
  && mkdir /downloads \
  && mkdir /db \
  && git clone https://github.com/dgthomson/phdl /phdl \
  && chmod +x /phdl/phdl.py \
  && touch /etc/youtube-dl.conf
WORKDIR /phdl
CMD /bin/bash
