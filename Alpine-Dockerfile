# syntax=docker/dockerfile:1
 FROM alpine:3.12
# Install required packages
 RUN apk update && apk -U add --no-cache \
     git \
     nano \
     python3 \
     py3-pip \
     wget \
     curl \
     unzip \
     ffmpeg \
     python3-lxml \
     bash \
  && pip3 install \
     youtube-dl \
     prettytable \
     bs4 \
     requests \
     lxml \
  && mkdir /phdl \
  && mkdir /downloads \
  && mkdir /db \
  && git clone https://github.com/dgthomson/phdl /phdl \
  && chmod +x /phdl/phdl.py \
  && touch /etc/youtube-dl.conf
WORKDIR /phdl
CMD /bin/bash
